          <Tab text="Pendências">
            <content>
                  <VBox prefWidth="600.0">
                     <children>
                        <ToolBar prefHeight="40.0" prefWidth="200.0">
                           <items>
                              <ComboBox promptText="Visualizar por turma" />
                              <Label text="Label" />
                           </items>
                        </ToolBar>
                        <TableView fx:id="tableViewTurma" prefWidth="600.0">
                          <columns>
                            <TableColumn fx:id="tableColumnTurma" prefWidth="140.0" text="Turma" />
