                                       </columns>
                                    </TableColumn>
                                 </columns>
                              </TableColumn>
                              <TableColumn prefWidth="75.0" text="Certidões">
                                 <columns>
                                    <TableColumn prefWidth="75.0" text="Total" />
                                    <TableColumn prefWidth="75.0" text="Prontos" />
                                    <TableColumn prefWidth="75.0" text="Pendentes" />
                                 </columns>
                              </TableColumn>
                              <TableColumn prefWidth="75.0" />
                          </columns>
                        </TableView>
                     </children>
                  </VBox>
            </content>
          </Tab>
          <Tab text="Alunos a Certificar">
            <content>
                  <VBox>
                     <children>
                        <TreeTableView fx:id="treeTableViewAluno" prefHeight="200.0" prefWidth="200.0">
                          <columns>
                            <TreeTableColumn fx:id="treeTableColumnTurma" prefWidth="75.0" text="Turma" />
                              <TreeTableColumn prefWidth="90.0" text="Matrícula" />
                            <TreeTableColumn fx:id="treeTableColumnAluno" prefWidth="234.0" text="Aluno" />
                              <TreeTableColumn prefWidth="129.0" text="Tipo de Documento" />
                          </columns>
                        </TreeTableView>
                     </children>
                  </VBox>
            </content>
          </Tab>
          <Tab text="Migração Conexão">
          	<content>
          	</content>
